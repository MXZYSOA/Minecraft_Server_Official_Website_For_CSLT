<script>
// 服务器状态检查
fetch('/api/server-status')
    .then(response => response.json())
    .then(data => {
        const statusElement = document.getElementById('server-status');
        if (data.success && data.data.online) {
            statusElement.innerHTML = `<i class="fas fa-circle text-success"></i> 在线 (${data.data.players.current}/${data.data.players.max})`;
        } else {
            statusElement.innerHTML = '<i class="fas fa-circle text-danger"></i> 离线';
        }
    })
    .catch(() => {
        document.getElementById('server-status').innerHTML = '<i class="fas fa-circle text-warning"></i> 未知';
    });
</script>